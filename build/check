#!/usr/bin/env bash

source "$(dirname ${BASH_SOURCE[0]})/lib/_shared.bash"
include "bl_env"

run "cppcheck" cppcheck --enable=all "$BL_MAIN_PATH"
run "flawfinder" flawfinder --allowlink "$BL_MAIN_PATH"
run "splint" splint +posix-lib "$BL_MAIN_PATH"

warn "infer not configured yet"
#run "infer" ext/infer/bin/infer $BL_MAIN_PATH
